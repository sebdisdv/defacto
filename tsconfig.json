{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "resolveJsonModule": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "outDir": "dist",
        "sourceMap": false,
        "declaration": false,
        "baseUrl": "src",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": [
        "src"
    ]
}